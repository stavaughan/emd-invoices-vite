{
    "compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@*": ["src/*"]
        },
		"resolveJsonModule": true,
		"noEmit": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
    },
	"types": ["vite/client"],
	"include": [
		"src",
		"vite.config.js",
		"viteConfig",
	]
}
