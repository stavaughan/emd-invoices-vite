{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ES2020",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmitOnError": true,
		"outDir": "./dist",
		"sourceMap": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"backend/**/*"
	],
	"exclude": [
		"node_modules",
		"frontend",
	]
}
